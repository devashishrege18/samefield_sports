rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Points/XP collection - authenticated users can read all, write own
    match /points/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Forum threads - authenticated users can read all, write own
    match /forumThreads/{threadId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
      
      // Comments subcollection
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
      }
    }
    
    // Stream chat - authenticated users can read/write
    match /streamChat/{channelId}/messages/{messageId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Fandom circles - public read, authenticated write
    match /fandomCircles/{circleId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      // Posts subcollection
      match /posts/{postId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
      }
      
      // Chat subcollection
      match /chat/{messageId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
      }
    }
    
    // Polls - public read, authenticated vote
    match /polls/{pollId} {
      allow read: if true;
      allow update: if request.auth != null;
    }
    
    // Voice rooms - authenticated access
    match /voiceRooms/{roomId} {
      allow read, write: if request.auth != null;
    }
  }
}
