rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Fandom Circles: Publicly readable, only admin/system write (simulated)
    match /circles/{circleId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Fandom Posts: Publicly readable, authenticated create, owner update/delete
    match /circles/{circleId}/posts/{postId} {
      allow read: if true;
      allow create: if true; // Allow guest posts for now but could be isAuthenticated()
      allow update, delete: if true; // In prod restrict to owner
    }
    
    // Fandom Chat: Real-time sync, publicly readable
    match /circles/{circleId}/chat/{messageId} {
      allow read: if true;
      allow create: if true;
    }
    
    // Leaderboard: Publicly readable, system only writes (authenticated)
    match /leaderboard/{userId} {
      allow read: if true;
      allow write: if isAuthenticated() || true; // Hackathon mode
    }

    // Default: Secure by default
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
